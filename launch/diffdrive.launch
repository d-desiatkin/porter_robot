<launch>
	<!-- This needed due to bug in rviz visualization on melodic. When bug is fixed line below could be deleted -->
	<env name="LC_NUMERIC" value="en_US.UTF-8" />
	<arg name="model" default="$(find porter_robot)/model/model.xacro"/>
	<arg name="rvizconfig" default="$(find porter_robot)/simulation/rviz/default.rviz" />

	<include file="$(find porter_robot)/launch/gazebo.launch">
		<arg name="model" value="$(arg model)" />
		<arg name="spawn_height" value="3.0" />
	</include>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" />

	<rosparam command="load"
				file="$(find porter_robot)/config/joints.yaml"
				ns="porter_joint_state_controller" />
	<rosparam command="load"
				file="$(find porter_robot)/config/diffdrive.yaml"
				ns="porter_diff_drive_controller" />

	<node name="porter_controller_spawner" pkg="controller_manager" type="spawner"
		args="porter_joint_state_controller
		porter_diff_drive_controller
		--shutdown-timeout 3"/>

	<node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering">
		<param name="default_topic" value="/porter_diff_drive_controller/cmd_vel"/>
	</node>
</launch>
