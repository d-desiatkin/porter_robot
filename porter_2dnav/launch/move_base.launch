<launch>
	
	<arg name="scan_topic" value="/porter/os1_cloud_node/scan" />
	
	<node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="lidar_converter" ns="porter" >
	<remap from="cloud_in" to="/porter/os1_cloud_node/points" />
	<remap from="scan" to="$(arg scan_topic)" />
	</node>
	
	<include file="$(find ouster_driver)/launch/os1.launch" ns="porter">
		<arg name="lidar_address" value="10.5.5.80" />
		<arg name="node_name" value="os1_cloud_node" />
		<arg name="pc_address" value="10.5.5.1" />
		<arg name="pointcloud_mode" value="NATIVE" />
		<arg name="lidar_frame_name" value="os1_lidar" />
		<arg name="lidar_topic_name" value="/porter/os1_cloud_node/points" />
		<arg name="imu_frame_name" value="os1_imu" />
		<arg name="imu_topic_name" value="/porter/os1_cloud_node/imu" />
		<arg name="operation_mode" value="1024x20" />
		<arg name="window_rejection" value="" />
	</include>
	
	<param name="use_sim_time" value="false"/>
	
	<master auto="start"/>
	
	<!-- Run the map server -->
	<node name="map_server" pkg="map_server" type="map_server" ns="porter" args="$(find porter_map)/22.04.20_gf.yaml"/>
	

	<!--- Run AMCL --> 
	<node pkg="amcl" type="amcl" name="amcl" ns="porter" output="screen">
		<remap from="/porter/scan" to="$(arg scan_topic)" />

		<param name="base_frame_id" value="chasiss" />
		<param name="odom_model_type" value="diff-corrected" />
		<param name="min_particles" value="500" />
		<param name="odom_alpha1" value="0.04" />
		<param name="odom_alpha2" value="0.6" />
		<param name="odom_alpha3" value="0.3" />
		<param name="odom_alpha4" value="0.04" />
		<param name="laser_z_hit" value="0.5" />
		<param name="laser_z_hit" value="0.5" />
		<param name="laser_max_range" value="10.0" />
		<param name="laser_model_type" value="likelihood_field" />
		<param name="laser_likelihood_max_dist" value="6.0" />
		<param name="resample_interval" value="1" />
		
	</node>

	<node pkg="move_base" type="move_base" name="move_base" ns="porter">
		<rosparam file="$(find porter_2dnav)/config/costmap_common_params.yaml" command="load" ns="global_costmap" /> 
		<rosparam file="$(find porter_2dnav)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
		<rosparam file="$(find porter_2dnav)/config/local_costmap_params.yaml" command="load" />
		<rosparam file="$(find porter_2dnav)/config/global_costmap_params.yaml" command="load" /> 
		<rosparam file="$(find porter_2dnav)/config/base_local_planner_params.yaml" command="load" />
		<remap from="/porter/porter/os1_cloud_node/scan" to="/porter/os1_cloud_node/scan" />
		<remap from="cmd_vel" to="/porter/diff_drive_controller/cmd_vel" />
		<remap from="odom" to="/porter/diff_drive_controller/odom" />
	</node>

</launch> 
